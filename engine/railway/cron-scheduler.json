{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python -m railway.cron_scheduler",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "always"
  }
}